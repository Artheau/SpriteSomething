{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/Artheau/SpriteSomething/master/resources/app/metroid3/samus/manifests/samus-language.schema.json",
  "type": "object",
  "title": "SpriteSomething Metroid3 Samus Sprite Translation File Schema",
  "description": "Required strings for translation",
  "required": [
    "section",
    "Aiming",
    "Facing",
    "Suit",
    "Variant",
    "Cannon Port"
  ],
  "properties": {
    "section": {
      "$id": "#/properties/section",
      "type": "object",
      "title": "The Section Schema",
      "required": [
        "aiming",
        "facing",
        "suit",
        "variant",
        "cannon-port"
      ],
      "items": {
        "$id": "#/properties/section/items",
        "type": "string",
        "title": "The Section Items Schema",
        "pattern": "^(.*)$"
      }
    },
    "Aiming": {
      "$id": "#/properties/Aiming",
      "type": "object",
      "title": "The Aiming Schema",
      "required": [
        "up",
        "diag_up",
        "neutral",
        "shoot",
        "diag_down",
        "down"
      ],
      "items": {
        "$id": "#/properties/Aiming/items",
        "type": "string",
        "title": "The Aiming Items Schema",
        "pattern": "^(.*)$"
      }
    },
    "Facing": {
      "$id": "#/properties/Facing",
      "type": "object",
      "title": "The Facing Schema",
      "required": [
        "left",
        "right"
      ],
      "items": {
        "$id": "#/properties/Facing/items",
        "type": "string",
        "title": "The Facing Items Schema",
        "pattern": "^(.*)$"
      }
    },
    "Suit": {
      "$id": "#/properties/Suit",
      "type": "object",
      "title": "The Suit Schema",
      "required": [
        "power",
        "varia",
        "gravity"
      ],
      "items": {
        "$id": "#/properties/Suit/items",
        "type": "string",
        "title": "The Suit Items Schema",
        "pattern": "^(.*)$"
      }
    },
    "Variant": {
      "$id": "#/properties/Variant",
      "type": "object",
      "title": "The Variant Schema",
      "required": [
        "standard",
        "charge",
        "speed_boost",
        "speed_squat",
        "hyper",
        "heat",
        "xray",
        "sepia",
        "door"
      ],
      "items": {
        "$id": "#/properties/Variant/items",
        "type": "string",
        "title": "The Variant Items Schema",
        "pattern": "^(.*)$"
      }
    },
    "Cannon Port": {
      "$id": "#/properties/Cannon Port",
      "type": "object",
      "title": "The Cannon port Schema",
      "required": [
        "no",
        "yes"
      ],
      "items": {
        "$id": "#/properties/Cannon Port/items",
        "type": "string",
        "title": "The Cannon Port Items Schema",
        "pattern": "^(.*)$"
      }
    }
  }
}
