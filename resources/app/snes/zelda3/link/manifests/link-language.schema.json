{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/Artheau/SpriteSomething/master/resources/app/zelda3/link/manifests/link-language.schema.json",
  "type": "object",
  "title": "SpriteSomething Zelda3 Link Sprite Translation File Schema",
  "description": "Required strings for translation",
  "required": [
    "section",
    "Facing",
    "Mail",
    "Sword",
    "Shield",
    "Gloves"
  ],
  "properties": {
    "section": {
      "$id": "#/properties/section",
      "type": "object",
      "title": "The Section Schema",
      "required": [
        "facing",
        "mail",
        "sword",
        "shield",
        "gloves"
      ],
      "items": {
        "$id": "#/properties/section/items",
        "type": "string",
        "title": "The Section Items Schema",
        "pattern": "^(.*)$"
      }
    },
    "Facing": {
      "$id": "#/properties/Facing",
      "type": "object",
      "title": "The Facing Schema",
      "required": [
        "left",
        "right"
      ],
      "items": {
        "$id": "#/properties/Facing/items",
        "type": "string",
        "title": "The Facing Items Schema",
        "pattern": "^(.*)$"
      }
    },
    "Mail": {
      "$id": "#/properties/Mail",
      "type": "object",
      "title": "The Mail Schema",
      "required": [
        "green",
        "blue",
        "red"
      ],
      "items": {
        "$id": "#/properties/Mail/items",
        "type": "string",
        "title": "The Mail Items Schema",
        "pattern": "^(.*)$"
      }
    },
    "Sword": {
      "$id": "#/properties/Sword",
      "type": "object",
      "title": "The Variant Schema",
      "required": [
        "none",
        "fighter",
        "master",
        "tempered",
        "gold"
      ],
      "items": {
        "$id": "#/properties/Sword/items",
        "type": "string",
        "title": "The Sword Items Schema",
        "pattern": "^(.*)$"
      }
    },
    "Shield": {
      "$id": "#/properties/Shield",
      "type": "object",
      "title": "The Shield Schema",
      "required": [
        "none",
        "fighter",
        "fire",
        "mirror"
      ],
      "items": {
        "$id": "#/properties/Cannon Port/items",
        "type": "string",
        "title": "The Cannon Port Items Schema",
        "pattern": "^(.*)$"
      }
    },
    "Gloves": {
      "$id": "#/properties/Gloves",
      "type": "object",
      "title": "The Gloves Schema",
      "required": [
        "none",
        "power",
        "titan"
      ],
      "items": {
        "$id": "#/properties/Gloves/items",
        "type": "string",
        "title": "The Gloves Items Schema",
        "pattern": "^(.*)$"
      }
    }
  }
}
